# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        interval = 5
}

#order += "battery 1"
order += "volume master"
order += "disk /"
order += "memory"
order += "cpu_usage"
order += "ethernet enp3s0"
order += "time"

time {
        format = "| %H:%M %d/%m/%Y"
}

ethernet enp3s0{
    color_good = "#FFFFFF"
        format_up = "󰤨 "
        format_down = "󰤯 "
}

cpu_usage {
    format = "  %usage |"
}

memory {
    format = "  %percentage_used"
}

disk "/" {
        format = "  %avail"
}

volume master {
    format = "  %volume"
        device = "default"
        mixer = "Master"
}

